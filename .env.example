# ===========================================
# Required Environment Variables
# ===========================================

# Database (PostgreSQL with SSL)
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# Application
NEXT_PUBLIC_APP_URL=https://helpportal.app
AUTH_URL=https://helpportal.app
APP_DOMAIN=helpportal.app
NODE_ENV=production

# Security (generate unique values for each — do NOT reuse across keys)
# Generate with: openssl rand -hex 32
SESSION_SECRET=
ENCRYPTION_KEY=
AUTH_SECRET=

# Discord OAuth
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# Discord Bot (main domain)
DISCORD_BOT_TOKEN=

# Stripe Billing
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID=

# Hygraph CMS
HYGRAPH_ENDPOINT=
HYGRAPH_TOKEN=

# Atlassian / Jira (optional — for main domain API-token mode)
ATLASSIAN_DOMAIN=yoursite.atlassian.net
ATLASSIAN_EMAIL=
ATLASSIAN_API_TOKEN=
JIRA_SERVICE_DESK_ID=
JIRA_PROJECT_KEY=

# Atlassian OAuth (for tenant OAuth connections)
ATLASSIAN_CLIENT_ID=
ATLASSIAN_CLIENT_SECRET=

# Jira Webhook (main domain)
JIRA_WEBHOOK_SECRET=

# Auth cookies (for cross-subdomain OAuth)
AUTH_COOKIE_DOMAIN=.helpportal.app
